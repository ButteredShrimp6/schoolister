<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:designer="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space1" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:gravity="center">
        <Button
            android:minWidth="25px"
            android:minHeight="45px"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="BACK HOME"
            android:id="@+id/button1"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"
            android:textStyle="bold"
            android:backgroundTint="#ff6dc9f7"/>
    </LinearLayout>
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space2" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:padding="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Code"
            android:id="@+id/editText1"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task"
            android:id="@+id/editText2"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Deadline Date (e.g. 2022-01-01)"
            android:id="@+id/editText3"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Deadline Time (e.g. 23:59)"
            android:id="@+id/editText4"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
    </LinearLayout>
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space3" />
    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow1"
            android:gravity="center">
            <Button
                android:minWidth="25px"
                android:minHeight="45px"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="UPDATE TASK"
                android:id="@+id/button2"
                android:fontFamily="monospace"
                android:textColor="#3A2C60"
                android:textStyle="bold"
                android:backgroundTint="#fff8a358"/>
            <Space
                android:layout_height="wrap_content"
                android:layout_width="10dp"
                android:id="@+id/space3" />
            <Button
                android:minWidth="25px"
                android:minHeight="45px"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="DELETE TASK"
                android:id="@+id/button3"
                android:fontFamily="monospace"
                android:textColor="#3A2C60"
                android:textStyle="bold"
                android:backgroundTint="#fff8a358"/>
        </TableRow>
    </TableLayout>
</LinearLayout>