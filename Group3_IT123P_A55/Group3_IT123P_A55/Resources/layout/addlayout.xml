<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space1" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:gravity="center">
        <Button
            android:minWidth="25px"
            android:minHeight="45px"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="BACK HOME"
            android:id="@+id/button1"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"
            android:textStyle="bold"
            android:backgroundTint="#ff6dc9f7" />
    </LinearLayout>
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space2" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:padding="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Code"
            android:id="@+id/editText1"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task"
            android:id="@+id/editText2"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Enter Deadline Date (e.g. June 13, 2022)"
            android:id="@+id/editText3"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Deadline Time (e.g. 23:59)"
            android:id="@+id/editText4"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"/>
    </LinearLayout>
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/space3" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:gravity="center">
        <Button
            android:minWidth="25px"
            android:minHeight="45px"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="ADD TASK"
            android:id="@+id/button2"
            android:fontFamily="monospace"
            android:textColor="#3A2C60"
            android:textStyle="bold"
            android:backgroundTint="#fff8a358"/>
    </LinearLayout>
</LinearLayout>